<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:id="@+id/cv_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/img_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_view"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Faaris Dzaki"
            android:textSize="25dp"
            android:id="@+id/tv_nama"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65 Tahun"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:id="@+id/tv_usia"
            app:layout_constraintLeft_toRightOf="@id/img_view"
            app:layout_constraintTop_toBottomOf="@id/tv_nama"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sulawesi Selatan"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/img_view"
            app:layout_constraintTop_toBottomOf="@id/tv_usia"
            android:id="@+id/tv_asal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>